set folder = "imaps://@imap.gmail.com:993"
set smtp_url = "smtps://@smtp.gmail.com:587"

set spoolfile = "+INBOX"
set imap_pass= "`gopass show email/gmail/imap`"
set smtp_pass= "`gopass show email/gmail/imap`"

set copy=no
set record = "+[Gmail]/Sent Mail"
set trash = "+Trash"
set postponed = "+Drafts"

set header_cache = "~/.config/neomutt/cache/headers"
set message_cachedir = "~/.config/neomutt/cache/bodies"
set sidebar_visible = true
set sidebar_width = 20
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"

bind index,pager \Cp sidebar-prev
bind index,pager \Cn sidebar-next
bind index,pager \Co sidebar-open
bind index,pager B sidebar-toggle-visible

mailboxes +INBOX \
"+[Gmail]/Sent Mail" \
+Drafts \
+Spam \
+Trash 

source colors.muttrc


